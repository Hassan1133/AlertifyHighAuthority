<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/recycler_card_style"
    android:id="@+id/policeStationRecyclerDesign">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/policeStationRecyclerImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/topCornerBorderRadius"
        />



    <TextView
        android:id="@+id/policeStationRecyclerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policeStationRecyclerImg"
        android:text="Police Station Samanabad Faisalabad"
        android:fontFamily="@font/text_size"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/policeStationRecyclerLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policeStationRecyclerName"
        android:text="Police Station Samanabad Faisalabad"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        />

    <Button
        android:id="@+id/recyclerEditBtn"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_below="@+id/policeStationRecyclerLocation"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:text="Edit"
        android:textAllCaps="false"
        android:backgroundTint="@color/app_color"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        />

    <Button
        android:id="@+id/recyclerDeleteBtn"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_below="@+id/policeStationRecyclerLocation"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="5dp"
        android:text="Delete"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/recyclerEditBtn"
        android:textAllCaps="false"
        android:backgroundTint="@color/app_color"
        android:textColor="@color/white"
        android:textSize="11sp"
        />

</RelativeLayout>