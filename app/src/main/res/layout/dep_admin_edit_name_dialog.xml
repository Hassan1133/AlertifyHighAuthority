<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dep_admin_edit_dialog_shape">

        <ImageView
            android:id="@+id/editDepAdminNameDialogCloseBtn"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dep_admin_dialog_name_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDepAdminNameDialogCloseBtn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:hint="@string/dep_admin_name_hint"
            android:textColorHint="@color/hint_clr"
            app:boxStrokeColor="@color/hint_clr"
            app:hintTextColor="@color/hint_clr">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDepAdminDialogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/cursor_shape"
                android:textSize="15sp"
                android:textColor="@color/hint_clr"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/editDepAdminUpdateNameDialogBtn"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/dep_admin_dialog_name_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/app_color"
            android:text="@string/update"
            android:textColor="@color/white" />

    </RelativeLayout>

</ScrollView>